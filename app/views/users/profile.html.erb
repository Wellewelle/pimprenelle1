      </div>


      <div class="card-category-profile-first " style="background-color: white;">
        <span style="color: #FFAA4C; font-weight: bold;">Tes histoires favorites (<%= current_user.favorites.length %>)</span>
        <ol class="list-group list-group-numbered mb-3">
        <% @user.favorites.each do |favorite| %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><strong><%= link_to favorite.story.title, story_path(favorite.story), class: "linkstory" %></strong></div>
            </div>
            <span class="#"><%= button_to favorite_path(favorite, story_id: favorite.story.id), id: "destroybtn", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa-solid fa-trash-can" style="color: #035397;"></i>
            </span>
            <% end %>
          </li>
          <% end %>
        </ol>
      </div>
      <div class="card-category-profile" style="background-color: white;">
        <span style="color: #FFAA4C; font-weight: bold"> Tes histoires crÃ©es (<%= current_user.stories.length %>)</span>
        <ol class="list-group list-group-numbered">
        <% @user.stories.each do |story| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="ms-2 me-auto">
              <div class="fw-bold">
                <strong><%= link_to story.title, story_path(story), class: "linkstory" %></strong>
              </div>
            </div>




              <div class="d-flex" style="gap: 10px; align-items: baseline;">
                <div class= "">
                  <span class="order-1"><%= button_to edit_story_path(story), method: :get, id:"editbutton" do %>
                   <i class="fa-solid fa-pen-nib"style="color: #035397;"></i>
                  </span>
                  <% end %>
                </div>

                <div class= "">
                  <span class="order-2"><%= button_to story_path(story), id: "destroybtn", method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa-solid fa-trash-can" style="color: #035397;"></i>
                  </span>
                  <% end %>
                </div>

              </div>
          </li>
          <% end %>
        </ol>
      </div>
      <div class="card-category-profile" style="background-color: white;">
        <span style="color: #FFAA4C; font-weight: bold"> Tes histoires en cours (<%= current_user.read_stories.length %>)</span>
        <ol class="list-group list-group-numbered">
          <% @user.read_stories.includes(:story).each do |read_story| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="ms-2 me-auto">
              <div class="fw-bold">
                <strong><%= link_to read_story.story.title, story_path(read_story.story), class: "linkstory" %></strong>
              </div>
            </div>
          </li>
          <% end %>
        </ol>
      </div>
      <div class="card-category-profile-last" style="background-color: transparent;">
        <button type="button" class="icon d-flex pulse-button">
          <div class="cloud">
            <div class="puff puff-1"></div>
            <div class="puff puff-2"></div>
            <div class="puff puff-3"></div>
            <div class="puff puff-4"></div>
            <div class="puff puff-5"></div>
            <div class="puff puff-6"></div>
            <div class="puff puff-7"></div>
            <div class="puff puff-8"></div>
            <div class="puff puff-9"></div>
            <div class="puff puff-10"></div>
        </button>
      </div>
</div>
</div>

