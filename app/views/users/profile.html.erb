<div class="container">

  <h1 class="# mt-4 mb-4" style="font-weight: bold; background-image: url('https://files.slack.com/files-tmb/T02NE0241-F05140AEE20-d734bcdf01/7_720.png');">My profile</h1>


    <div class="cards">

      <div class="card-category d-flex justify-content-center align-items-center" style="background-color: white;">
      <span><%= image_tag "https://www.clipartmax.com/png/small/72-722180_these-are-some-cats-avatar-i-drew-during-my-free-time-black.png", class: "avatar dropdown-toggle fs-3 w-5", id: "carditoDropdown"%></span>
      <p> Hello <%= current_user.first_name %>! </p>
      </div>


      <div class="card-category " style="background-color: white;">
        <span style="color: #F1D00A;; font-weight: bold;">Tes histoires favorites</span>

        <ol class="list-group list-group-numbered mb-5">
        <% @user.favorites.each do |favorite| %>

          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= link_to favorite.story.title %></div>
            </div>
            <span class="#"><%= button_to "üóë", favorite_path(favorite, story_id: favorite.story.id), class: "destroybtn", method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </li>
          <% end %>
        </ol>

      </div>

      <div class="card-category" style="background-color: white;">
        <span style="color: #F1D00A; font-weight: bold"> Tes histoires cr√©es</span>

        <ol class="list-group list-group-numbered">
        <% @user.stories.each do |story| %>

          <li class="list-group-item d-flex justify-space-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= link_to story.title, story_path(story), class: "linkstory" %></div>
            </div>
            <span class="#"><%= link_to "edit", edit_story_path(story) %><%= button_to " üóë", story_path(story), class: "destroybtn", method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </li>
          <% end %>
        </ol>

      </div>


      <div class="card-category" style="background-color: white;">
        <span style="color: #F1D00A;; font-weight: bold">Raconte une nouvelle histoire</span>

      </div>
    <%= button_to "Back to homepage", root_path, class:"btn btn-primary" %>
</div>
</div>
